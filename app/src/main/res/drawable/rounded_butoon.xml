<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="10sp"></corners>
            <stroke android:color="#00FF0000" android:width="3sp"></stroke>
            <gradient android:startColor="#008577" android:angle="270"
                 android:endColor="#00574a"></gradient>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#00574a" android:angle="270"
                android:endColor="#008577"></gradient>
            <corners android:radius="10sp"></corners>
            <stroke android:color="#00FF0000" android:width="3sp"></stroke>
        </shape>
    </item>

</selector>