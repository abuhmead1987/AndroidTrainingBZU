<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disable state. -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#CCCCC4" />
            <stroke android:width="2dp" android:color="#CCCCC4" />
        </shape>
    </item>

    <!--released state. -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10sp"></corners>
            <stroke android:width="3sp" android:color="#00FF0000"></stroke>
            <gradient android:angle="270" android:endColor="#AC2E71" android:startColor="#880e4f"></gradient>
        </shape>
    </item>

    <!--pressed state. -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#008577" android:startColor="#00574a"></gradient>
            <corners android:radius="10sp"></corners>
            <stroke android:width="3sp" android:color="#00FF0000"></stroke>
        </shape>
    </item>

</selector>